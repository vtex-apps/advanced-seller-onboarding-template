{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "graphql"],
    "module": "esnext",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "lib": ["es5", "es6", "es7", "dom"]
  },
  "include": ["global.ts", "./**/*"]
}
